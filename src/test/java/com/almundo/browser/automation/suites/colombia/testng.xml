<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="ColombiaTestSuite">
    <!--<parameter name="appURL" value="http://www.almundo.com"/>-->
    <!--<parameter name="browserType" value="chrome"/>-->
    <!--<parameter name="country" value="COLOMBIA"/>-->

    <parameter name="originAuto" value="Bog"/>
    <parameter name="originFull" value="Bogotá, Bogotá D.C., Colombia"/>

    <parameter name="destinationAuto" value="Mia"/>
    <parameter name="destinationFull" value="Miami, Estados Unidos de América"/>

    <parameter name="startDate" value="7"/>
    <parameter name="endDate" value="10"/>

    <parameter name="adults" value="2"/>
    <parameter name="childs" value="2"/>

